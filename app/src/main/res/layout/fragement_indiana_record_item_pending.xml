<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/goods_image"
        android:layout_width="133.33dp"
        android:layout_height="133.33dp"
        android:background="#FFF000" />

    <TextView
        android:id="@+id/goods_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_goods_tag"
        android:text="10元\n专区"
        android:textColor="@color/white"
        android:textSize="8sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="13.33dp"
        android:layout_toRightOf="@+id/goods_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/goods_name"
            style="@style/text_title_13sp_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="iphone7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/your_join"
                android:textColor="@color/text_color_des"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/person_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textColor="#F9543E"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/person_time"
                android:textColor="@color/text_color_des"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/see_indiana_code"
                android:textColor="#00A0E9"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_alarm_clock"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="@string/soon_to_be_announced"
            android:textColor="#FF002E"
            android:textSize="13sp" />

        <cn.iwgang.countdownview.CountdownView
            android:id="@+id/newest_countDownView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:isHideTimeBackground="true"
            app:isShowDay="false"
            app:isShowMillisecond="false"
            app:suffixGravity="center"
            app:suffixTextColor="#FF002E"
            app:suffixTextSize="27sp"
            app:timeTextColor="#FF002E"
            app:timeTextSize="27sp" />

    </LinearLayout>
</RelativeLayout>