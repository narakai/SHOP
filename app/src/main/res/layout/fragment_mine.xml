<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <wiki.scene.loadmore.StatusViewLayout
        android:id="@+id/status_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <wiki.scene.loadmore.PtrClassicFrameLayout
            android:id="@+id/ptrLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_theme"
                        android:paddingBottom="20dp"
                        android:paddingTop="10dp">

                        <com.sunfusheng.glideimageview.GlideImageView
                            android:id="@+id/user_avater"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerHorizontal="true"
                            android:padding="10dp"
                            android:src="@drawable/ic_default_avater"
                            app:siv_border_color="@color/white"
                            app:siv_border_width="2dp"
                            app:siv_shape_type="circle" />

                        <TextView
                            android:id="@+id/setting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:paddingBottom="10dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="@string/setting"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_middle" />

                        <TextView
                            android:id="@+id/username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/user_avater"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:text="请登录"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_big" />

                        <TextView
                            android:id="@+id/user_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/username"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/shape_white_borad_round"
                            android:text="用户ID:0"
                            android:textColor="#F7CBC2"
                            android:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/layout1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/user_id"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="累计获胜"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/text_size_big" />

                                <TextView
                                    android:id="@+id/win_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="0"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/text_size_big" />

                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#30FFFFFF" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="佣金"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/text_size_big" />

                                <TextView
                                    android:id="@+id/commission"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="0"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/text_size_big" />
                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#30FFFFFF" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="夺宝币"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/text_size_big" />

                                <TextView
                                    android:id="@+id/coin"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="0"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/text_size_big" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/layout1"
                            android:layout_marginTop="20dp">

                            <View
                                android:layout_width="20dp"
                                android:layout_height="1dp" />

                            <TextView
                                android:id="@+id/recharge"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/shape_white_borad_round_corner"
                                android:gravity="center_horizontal"
                                android:paddingBottom="5dp"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:paddingTop="5dp"
                                android:text="@string/recharge"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_big" />

                            <View
                                android:layout_width="40dp"
                                android:layout_height="1dp" />

                            <TextView
                                android:id="@+id/exchange"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/shape_white_borad_round_corner"
                                android:gravity="center"
                                android:paddingBottom="5dp"
                                android:paddingTop="5dp"
                                android:text="兑换"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_big" />

                            <View
                                android:layout_width="40dp"
                                android:layout_height="1dp" />

                            <TextView
                                android:id="@+id/draw_cash"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/shape_white_borad_round_corner"
                                android:gravity="center"
                                android:paddingBottom="5dp"
                                android:paddingTop="5dp"
                                android:text="提现"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_big" />

                            <View
                                android:layout_width="20dp"
                                android:layout_height="1dp" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ED4E28"
                        android:paddingBottom="8dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="8dp">

                        <TextView
                            android:id="@+id/today_join"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="今日参与：0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_middle" />

                        <TextView
                            android:id="@+id/today_commission"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="今日佣金：0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_middle" />

                        <TextView
                            android:id="@+id/today_win"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="今日获胜：0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_middle" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/indiana_record"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="1dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:drawablePadding="10dp"
                            android:drawableTop="@drawable/ic_mine_indiana_record"
                            android:gravity="center_horizontal"
                            android:paddingBottom="20dp"
                            android:paddingTop="20dp"
                            android:text="@string/indiana_record"
                            android:textColor="#9A9A9A"
                            android:textSize="@dimen/text_size_big" />

                        <TextView
                            android:id="@+id/exchange_record"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginRight="1dp"
                            android:background="@color/white"
                            android:drawablePadding="10dp"
                            android:drawableTop="@drawable/ic_exchange"
                            android:gravity="center_horizontal"
                            android:paddingBottom="20dp"
                            android:paddingTop="20dp"
                            android:text="兑换记录"
                            android:textColor="#9A9A9A"
                            android:textSize="@dimen/text_size_big" />

                        <TextView
                            android:id="@+id/draw_cash_record"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="1dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:drawablePadding="10dp"
                            android:drawableTop="@drawable/ic_draw_cash"
                            android:gravity="center_horizontal"
                            android:paddingBottom="20dp"
                            android:paddingTop="20dp"
                            android:text="提现记录"
                            android:textColor="#9A9A9A"
                            android:textSize="@dimen/text_size_big" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/service_center"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="1dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:drawablePadding="10dp"
                            android:drawableTop="@drawable/ic_my_phone"
                            android:gravity="center_horizontal"
                            android:paddingBottom="20dp"
                            android:paddingTop="20dp"
                            android:text="客服中心"
                            android:textColor="#9A9A9A"
                            android:textSize="@dimen/text_size_big" />
                        <TextView
                            android:id="@+id/how_to_play"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginRight="1dp"
                            android:background="@color/white"
                            android:drawablePadding="10dp"
                            android:drawableTop="@drawable/ic_mine_card"
                            android:gravity="center_horizontal"
                            android:paddingBottom="20dp"
                            android:paddingTop="20dp"
                            android:text="玩法介绍"
                            android:textColor="#9A9A9A"
                            android:textSize="@dimen/text_size_big" />
                        <TextView
                            android:id="@+id/mine_phone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="1dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:drawablePadding="10dp"
                            android:visibility="gone"
                            android:drawableTop="@drawable/ic_my_phone"
                            android:gravity="center_horizontal"
                            android:paddingBottom="20dp"
                            android:paddingTop="20dp"
                            android:text="我的手机号"
                            android:textColor="#9A9A9A"
                            android:textSize="@dimen/text_size_big" />

                        <TextView
                            android:id="@+id/mine_card"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:drawablePadding="10dp"
                            android:layout_marginRight="1dp"
                            android:drawableTop="@drawable/ic_mine_card"
                            android:gravity="center_horizontal"
                            android:paddingBottom="20dp"
                            android:paddingTop="20dp"
                            android:text="我的银行卡"
                            android:visibility="gone"
                            android:textColor="#9A9A9A"
                            android:textSize="@dimen/text_size_big" />

                        <TextView
                            android:id="@+id/make_money"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:drawablePadding="10dp"
                            android:drawableTop="@drawable/ic_make_money"
                            android:gravity="center_horizontal"
                            android:paddingBottom="20dp"
                            android:paddingTop="20dp"
                            android:text="我要赚钱"
                            android:textColor="#9A9A9A"
                            android:textSize="@dimen/text_size_big" />
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </wiki.scene.loadmore.PtrClassicFrameLayout>
    </wiki.scene.loadmore.StatusViewLayout>
</LinearLayout>