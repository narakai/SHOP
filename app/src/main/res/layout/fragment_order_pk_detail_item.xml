<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/mine_buy_type"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50dp"
                android:background="@drawable/shape_bg_round_theme"
                android:gravity="right|center_vertical"
                android:paddingRight="10dp"
                android:text="单数"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_middle" />

            <com.sunfusheng.glideimageview.GlideImageView
                android:id="@+id/mine_avatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                app:siv_border_color="@color/white"
                app:siv_border_width="2dp"
                app:siv_shape_type="circle" />
        </RelativeLayout>

        <TextView
            android:id="@+id/mine_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:ellipsize="end"
            android:lines="1"
            android:text=""
            android:textColor="@color/text_color_title"
            android:textSize="@dimen/text_size_middle" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:src="@drawable/ic_vs" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/other_buy_type"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="50dp"
                android:background="@drawable/shape_bg_round_theme_stoke"
                android:gravity="center_vertical|left"
                android:paddingLeft="10dp"
                android:text="双数"
                android:textColor="@color/color_theme" />

            <com.sunfusheng.glideimageview.GlideImageView
                android:id="@+id/other_avatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:siv_border_color="@color/white"
                app:siv_border_width="2dp"
                app:siv_shape_type="circle" />

        </RelativeLayout>

        <TextView
            android:id="@+id/other_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:ellipsize="end"
            android:lines="1"
            android:text=""
            android:textColor="@color/text_color_title"
            android:textSize="@dimen/text_size_middle" />
    </LinearLayout>
</LinearLayout>