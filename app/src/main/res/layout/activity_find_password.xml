<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_gray2"
    android:orientation="vertical">

    <include layout="@layout/toolbar_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@color/white"
                android:drawableLeft="@drawable/ic_username"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:hint="@string/please_edit_phone_munber"
                android:inputType="number"
                android:lines="1"
                android:maxLines="1"
                android:padding="15dp"
                android:textSize="@dimen/text_size_big" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp">

                <EditText
                    android:id="@+id/verification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:drawableLeft="@drawable/ic_code"
                    android:drawablePadding="20dp"
                    android:hint="@string/please_edit_verification"
                    android:inputType="number"
                    android:lines="1"
                    android:maxLines="1"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:textSize="@dimen/text_size_big" />

                <TextView
                    android:id="@+id/get_verification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_theme_round"
                    android:gravity="center_vertical"
                    android:padding="3dp"
                    android:text="获取验证码"
                    android:textColor="@color/white" />

            </LinearLayout>

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:drawableLeft="@drawable/ic_password"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:hint="@string/please_edit_password"
                android:inputType="textPassword"
                android:lines="1"
                android:maxLines="1"
                android:padding="15dp"
                android:textSize="@dimen/text_size_big" />

            <EditText
                android:id="@+id/repassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:drawableLeft="@drawable/ic_password"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:hint="@string/please_comfirm_you_password"
                android:inputType="textPassword"
                android:lines="1"
                android:maxLines="1"
                android:padding="15dp"
                android:textSize="@dimen/text_size_big" />

            <Button
                android:id="@+id/complete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/bg_btn_login"
                android:text="@string/complete"
                android:textColor="@color/white"
                android:textSize="@dimen/btn_text_size" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>