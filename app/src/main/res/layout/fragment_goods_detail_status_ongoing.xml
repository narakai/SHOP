<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_goods_status_ongoing_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="8dp"
    android:orientation="horizontal">

    <ProgressBar
        android:id="@+id/ongoing_progressbar"
        style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="10"
        android:progressDrawable="@drawable/progressbar_color" />
    <TextView
        android:id="@+id/total_need_person_times"
        android:textColor="@color/text_color_des"
        android:textSize="@dimen/text_size_small"
        android:layout_below="@+id/ongoing_progressbar"
        android:layout_marginTop="8dp"
        android:text="@string/total_need_xx_person_times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/surplus_person_times"
        android:textColor="@color/text_color_des"
        android:textSize="@dimen/text_size_small"
        android:layout_below="@+id/ongoing_progressbar"
        android:layout_marginTop="8dp"
        android:layout_alignParentRight="true"
        android:text="@string/surplus_xx_person_times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>