<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="8dp">

    <wiki.scene.shop.widgets.RatioImageView
        android:id="@+id/goods_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:base="horizontal"
        app:horizontal_weight="49"
        app:vertical_weight="28" />

    <TextView
        android:id="@+id/goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:text="话费10元"
        android:textColor="@color/text_color_title"
        android:textSize="@dimen/text_size_xsmall" />

    <TextView
        android:id="@+id/goods_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/times_code"
        android:textColor="@color/text_color_des"
        android:textSize="9sp" />

    <LinearLayout
        android:id="@+id/layout_has_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_alarm_clock"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="@string/soon_to_be_announced"
            android:textColor="#FF002E"
            android:textSize="@dimen/text_size_xsmall" />

        <cn.iwgang.countdownview.CountdownView
            android:id="@+id/newest_countDownView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:isHideTimeBackground="true"
            app:isShowDay="false"
            app:isShowMillisecond="false"
            app:suffixGravity="center"
            app:suffixTextColor="#FF002E"
            app:suffixTextSize="27sp"
            app:timeTextColor="#FF002E"
            app:timeTextSize="27sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_no_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/get_user"
                android:textColor="@color/text_color_des"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="scene"
                android:textColor="#2FACFF"
                android:textSize="9sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6.66dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/join_person_time"
                android:textColor="@color/text_color_des"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/person_times"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="11"
                android:textColor="#F9543E"
                android:textSize="9sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/person_time"
                android:textColor="@color/text_color_des"
                android:textSize="9sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6.66dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/luck_code"
                android:textColor="@color/text_color_des"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/luck_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="scene"
                android:textColor="#F9543E"
                android:textSize="9sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6.66dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/announced_time"
                android:textColor="@color/text_color_des"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/announced_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2017-12-12 12:12:12"
                android:textColor="@color/text_color_des"
                android:textSize="9sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>