<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/toolbar_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingBottom="13.33dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="13.33dp"
                    android:text="@string/message_notice"
                    android:textColor="@color/text_color_title"
                    android:textSize="@dimen/text_size_middle" />

                <com.suke.widget.SwitchButton
                    android:id="@+id/message_notice_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    app:sb_button_color="@color/white"
                    app:sb_checked="true"
                    app:sb_show_indicator="false" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#F0F0F0" />

            <RelativeLayout
                android:id="@+id/clear_cache"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingBottom="13.33dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="13.33dp"
                    android:text="@string/clear_cache"
                    android:textColor="@color/text_color_title"
                    android:textSize="@dimen/text_size_middle" />

                <TextView
                    android:id="@+id/cache_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:drawablePadding="6.66dp"
                    android:drawableRight="@drawable/ic_mine_arrow_right"
                    android:text="0M"
                    android:textColor="@color/text_color_title"
                    android:textSize="@dimen/text_size_middle" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#F0F0F0" />

            <TextView
                android:id="@+id/add_wish_goods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13.33dp"
                android:background="@color/white"
                android:drawableRight="@drawable/ic_mine_arrow_right"
                android:gravity="center_vertical"
                android:paddingBottom="13.33dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="13.33dp"
                android:text="@string/add_wish_goods"
                android:textColor="@color/text_color_title"
                android:textSize="@dimen/text_size_middle"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#F0F0F0" />

            <TextView
                android:id="@+id/bug_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:drawableRight="@drawable/ic_mine_arrow_right"
                android:gravity="center_vertical"
                android:paddingBottom="13.33dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="13.33dp"
                android:text="@string/bug_feedback"
                android:textColor="@color/text_color_title"
                android:textSize="@dimen/text_size_middle" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#F0F0F0" />

            <TextView
                android:id="@+id/user_agreement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:drawableRight="@drawable/ic_mine_arrow_right"
                android:gravity="center_vertical"
                android:paddingBottom="13.33dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="13.33dp"
                android:text="@string/user_agreement"
                android:textColor="@color/text_color_title"
                android:textSize="@dimen/text_size_middle" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#F0F0F0" />

            <TextView
                android:id="@+id/about_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:visibility="gone"
                android:drawableRight="@drawable/ic_mine_arrow_right"
                android:gravity="center_vertical"
                android:paddingBottom="13.33dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="13.33dp"
                android:text="@string/about_us"
                android:textColor="@color/text_color_title"
                android:textSize="@dimen/text_size_middle" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="8dp"
                android:visibility="gone"
                android:layout_marginRight="8dp"
                android:background="#F0F0F0" />

            <Button
                android:id="@+id/exit_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/bg_btn_login"
                android:text="@string/exit_login"
                android:textColor="@color/white"
                android:textSize="@dimen/btn_text_size" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>