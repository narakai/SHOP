<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="13.33dp"
    android:paddingTop="13.33dp">

    <TextView
        android:id="@+id/receiver_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:text="收货人"
        android:textColor="@color/text_color_title"
        android:textSize="@dimen/text_size_small" />

    <TextView
        android:id="@+id/receiver_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingRight="8dp"
        android:text="1321232123"
        android:textColor="@color/text_color_title"
        android:textSize="@dimen/text_size_small" />

    <TextView
        android:id="@+id/receiver_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/receiver_name"
        android:layout_marginTop="15.33dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="重庆南坪"
        android:textColor="@color/text_color_title"
        android:textSize="@dimen/text_size_small" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/receiver_address"
        android:layout_marginTop="15.33dp"
        android:background="@color/bg_color_gray2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="15.33dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/default_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_address_choosed_s" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6.66dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/default_address"
            android:textColor="#F74C4B"
            android:textSize="@dimen/text_size_xsmall" />

        <TextView
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_address_edit"
            android:drawablePadding="6.66dp"
            android:gravity="center_vertical"
            android:text="@string/edit"
            android:textColor="@color/text_color_content"
            android:textSize="@dimen/text_size_xsmall" />

        <TextView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/ic_address_delete"
            android:drawablePadding="6.66dp"
            android:gravity="center_vertical"
            android:text="@string/delete"
            android:textColor="@color/text_color_content"
            android:textSize="@dimen/text_size_xsmall" />
    </LinearLayout>


</RelativeLayout>