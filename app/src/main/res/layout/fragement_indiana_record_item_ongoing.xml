<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/goods_cycle_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第201711071231期"
            android:textColor="@color/text_color_title"
            android:textSize="@dimen/text_size_big" />

        <TextView
            android:id="@+id/buy_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="2017-09-10 11:12:15"
            android:textColor="#999999"
            android:textSize="@dimen/text_size_small" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/line_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <wiki.scene.shop.widgets.RatioImageView
            android:id="@+id/goods_image"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_default_goods_image"
            android:scaleType="centerCrop"
            app:base="horizontal"
            app:horizontal_weight="370"
            app:vertical_weight="232" />

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/state_image"
            android:layout_toRightOf="@+id/goods_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/goods_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="Apple plus 128G"
                android:textColor="@color/text_color_title"
                android:textSize="@dimen/text_size_big" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="参与玩法："
                    android:textColor="@color/text_color_content"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/play_way"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="【尾号：单数】x 37"
                    android:textColor="@color/color_theme"
                    android:textSize="@dimen/text_size_small" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="购买金额："
                    android:textColor="@color/text_color_content"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/buy_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="$1245"
                    android:textColor="@color/color_theme"
                    android:textSize="@dimen/text_size_small" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开奖期号："
                    android:textColor="@color/text_color_content"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/cycle_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="123465798"
                    android:textColor="@color/color_theme"
                    android:textSize="@dimen/text_size_small" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开奖号码："
                    android:textColor="@color/text_color_content"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/win_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="12348"
                    android:textColor="@color/color_theme"
                    android:textSize="@dimen/text_size_small" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/state_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_win" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/line_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/image_goods_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_goods_state_win" />

        <TextView
            android:id="@+id/text_goods_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/image_goods_status"
            android:text="恭喜获胜"
            android:textColor="@color/color_theme"
            android:textSize="@dimen/text_size_middle" />

        <TextView
            android:id="@+id/countdownView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/image_goods_status"
            android:text="00:00:00"
            android:textColor="@color/color_theme"
            android:textSize="@dimen/text_size_middle"
            android:visibility="gone" />

        <TextView
            android:id="@+id/pk_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/goon_indiana"
            android:background="@drawable/shape_theme_round_corner_small"
            android:padding="5dp"
            android:text="PK详情"
            android:textColor="@color/color_theme"
            android:textSize="@dimen/text_size_middle" />

        <TextView
            android:id="@+id/goon_indiana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_theme_round_corner_small"
            android:padding="5dp"
            android:text="继续夺宝"
            android:textColor="@color/color_theme"
            android:textSize="@dimen/text_size_middle" />
    </RelativeLayout>

</LinearLayout>