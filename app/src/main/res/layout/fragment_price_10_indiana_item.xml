<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <wiki.scene.shop.widgets.RatioImageView
            android:id="@+id/goods_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:base="horizontal"
            app:horizontal_weight="1"
            app:vertical_weight="1" />

        <TextView
            android:id="@+id/goods_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_goods_tag"
            android:gravity="center"
            android:text="10元\n专区"
            android:textColor="@color/white"
            android:textSize="8sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:ellipsize="end"
        android:lines="2"
        android:maxLines="2"
        android:text="中国电信话费"
        android:textColor="@color/text_color_title"
        android:textSize="@dimen/text_size_middle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lottery_progress"
                    android:textColor="@color/text_color_des"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/precent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="6"
                    android:textColor="#F9543E"
                    android:textSize="@dimen/text_size_small" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/ongoing_progressbar"
                style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="5dp"
                android:progress="10"
                android:progressDrawable="@drawable/progressbar_color" />
        </LinearLayout>


        <TextView
            android:id="@+id/goon_indiana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_gooning_indiana"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:text="@string/immediately_indiana"
            android:textColor="#EA5F76"
            android:textSize="@dimen/text_size_big" />
    </LinearLayout>
</LinearLayout>