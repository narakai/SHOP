<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_goods_status_announced_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF8282"
        android:orientation="horizontal"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/announced_user_avater"
                android:layout_width="63.33dp"
                android:layout_height="63.33dp"
                android:layout_marginTop="10.66dp"
                android:src="@drawable/ic_default_avater" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="2dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_goods_detail_level" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/ic_goods_detail_vip"
                    android:gravity="bottom"
                    android:text="3"
                    android:textColor="#F39800"
                    android:textSize="9dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/layout3"
            android:layout_toRightOf="@+id/layout1"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/announced_winner_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:layout_marginTop="10.66dp"
                android:text="@string/winner_xx"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small" />
            <TextView
                android:id="@+id/announced_winner_ip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:layout_marginTop="13.33dp"
                android:text="@string/user_ip_xx"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small" />
            <TextView
                android:id="@+id/announced_winner_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:layout_marginTop="13.33dp"
                android:text="@string/user_id_xx"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small" />
            <TextView
                android:id="@+id/winner_join_times"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:layout_marginTop="13.33dp"
                android:text="@string/this_time_join_xx_person_times"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small" />
            <TextView
                android:id="@+id/announced_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:layout_marginTop="13.33dp"
                android:text="@string/announced_time_xx"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

        <ImageView
            android:id="@+id/layout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_goods_detail_winner" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F39800"
        android:padding="8dp">

        <TextView
            android:id="@+id/announced_luck_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/luck_code_xx"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/announced_reckon_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_reckon_detail"
            android:padding="5dp"
            android:text="@string/reckon_detail"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </RelativeLayout>

</LinearLayout>