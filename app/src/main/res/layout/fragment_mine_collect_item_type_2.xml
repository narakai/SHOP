<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/goods_image"
        android:layout_width="100dp"
        android:padding="8dp"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/goods_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_goods_tag"
        android:gravity="center"
        android:text="10元\n专区"
        android:textColor="@color/white"
        android:textSize="8sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="13.33dp"
        android:layout_toRightOf="@+id/goods_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/goods_name"
            style="@style/text_title_13sp_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="iphone7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <cn.iwgang.countdownview.CountdownView
                android:id="@+id/newest_countDownView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                app:isHideTimeBackground="true"
                app:isShowDay="false"
                app:isShowMillisecond="false"
                app:suffixGravity="center"
                app:suffixTextColor="#FF002E"
                app:suffixTextSize="27sp"
                app:timeTextColor="#FF002E"
                app:timeTextSize="27sp" />

            <TextView
                android:id="@+id/goon_indiana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/btn_gooning_indiana"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="3dp"
                android:text="@string/goon_indiana"
                android:textColor="#EA5F76"
                android:textSize="@dimen/text_size_big" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>